dependency "mir-core" version=">=0.0.7 <1.0.0"

buildType "unittest" {
	buildOptions "unittests" "debugMode" "debugInfo"
    versions "mir_test"
}
buildType "unittest-cov" {
	buildOptions "unittests" "coverage" "debugMode" "debugInfo"
